<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jiang.learncode2">
    <!-- 权限声明 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" /> <!-- 允许联网 -->
    <uses-permission android:name="android.permission.INTERNET" /> <!-- 获取GSM（2g）、WCDMA（联通3g）等网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" /> <!-- 获取wifi网络状态的信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" /> <!-- 保持CPU 运转，屏幕和键盘灯有可能是关闭的,用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WAKE_LOCK" /> <!-- 获取sd卡写的权限，用于文件上传和下载 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" /> <!-- 允许读取手机状态 用于创建BmobInstallation -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:networkSecurityConfig="@xml/network_security_config">
        <activity android:name=".SettingModule.FileActivity"></activity>
        <activity android:name=".SettingModule.RecordActivity" />
        <activity android:name=".SettingModule.ModifyPwdActivity" />
        <activity android:name=".ForumModule.Activity.SearchActivity" />
        <activity android:name=".ForumModule.Activity.newAnswerActivity" />
        <activity android:name=".ForumModule.Activity.AnswerActivity" />
        <activity android:name=".ForumModule.Activity.QuestionActivity" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <data android:scheme="file" />
                <data android:host="*" />
                <data android:mimeType="text/plain" />
                <data android:pathPattern=".*" />
            </intent-filter>
        </activity>
        <activity android:name=".HomeModule.textwarrior.simpleC.activity.FileListActivity" />
        <activity
            android:name=".HomeModule.textwarrior.simpleC.activity.SettingActivity"
            android:label="设置" />
        <activity
            android:name=".HomeModule.textwarrior.simpleC.term.ConsoleActivity"
            android:configChanges="orientation|keyboard|keyboardHidden|screenSize"
            android:label="控制台"
            android:theme="@android:style/Theme.DeviceDefault"
            android:windowSoftInputMode="adjustResize|stateHidden" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".RegisterActivity" />

        <service
            android:name=".HomeModule.textwarrior.simpleC.term.TermuxService"
            android:exported="false" />

        <provider
            android:name="cn.bmob.v3.util.BmobContentProvider"
            android:authorities="com.jiang.learncode2.BmobContentProvider" />
    </application>

</manifest>