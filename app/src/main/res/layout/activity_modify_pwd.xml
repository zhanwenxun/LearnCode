<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/i8_login_password" />

            <EditText
                android:id="@+id/oldpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/i8_register_password_digits"
                android:ems="10"
                android:hint="请输入原始密码"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/i8_login_password" />

            <EditText
                android:id="@+id/newpwd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/i8_register_password_digits"
                android:ems="10"
                android:hint="请输入新密码"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/I8d44"
            android:layout_marginTop="@dimen/I8d14"
            android:background="@drawable/i8_login_line_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/I8d10"
                android:layout_marginRight="@dimen/I8d10"
                android:src="@drawable/i8_login_password" />

            <EditText
                android:id="@+id/newpwd2"
                android:layout_width="307dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:digits="@string/i8_register_password_digits"
                android:ems="10"
                android:hint="请再次输入新密码"
                android:maxLength="16"
                android:singleLine="true"
                android:textColor="@color/i8_light_black"
                android:textColorHint="@color/i8_login_edit_hint"
                android:textSize="@dimen/i8_edit_text_size_16" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/I8d35"
            android:orientation="horizontal">

            <Button
                android:id="@+id/queren"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/I8d45"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1"
                android:background="@drawable/i8_login_btn_bg"
                android:text="确认"
                android:textColor="@color/i8_white_f3"
                android:textSize="@dimen/i8_edit_text_size_16" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>